<h3>Assessments</h3>
<h4><%= link_to 'Download as CSV', export_assessments_path(:format => :csv) %></h4>
<table id="assessment-table-current" class="table table-condensed tablesorter">
  <thead>
    <% @fields.each do |name| %>
      <th><%= name %></th>
    <% end %>
  </thead>
  <tbody>
  <% @assessments.each do |a| %>
    <tr>
      <% @fields.each do |name| %>
        <td><%= a.send name %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
