.dash_widget
  %h4= title
  - unless courses.blank?
    %table.table.table-striped.table-condensed.tablesorter{:id => id}
      %thead
        %tr
          %th Name
          %th Submission Date
          %th Class Date
          %th
          %th.hidden Search fodder
      %tbody
        - courses.each do |course|
          %tr
            %td= link_to(course.title, course )
            %td= course.created_at.strftime(DATE_FORMAT)
            %td.section-times= first_plus_multiple_sections(course.sections).html_safe
            %td
              = render :partial => 'shared/course_actions', :locals => { :course => course }
            %td.hidden= searchable_fields(course)
    = render :partial => '/shared/tablesorter_pager', :locals => {:pager_id => "#{id}" }
  - else
    None yet.
