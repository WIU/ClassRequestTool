<h3>Classroom Technologies Available</h3>

<div>
  	<table id="attributes-table" class="table table-striped table-condensed tablesorter">
	<thead>
	  <tr>
		<th>Name</th>
		<th>Actions</th>
	  </tr>
	</thead>
	<tbody>
	    <% @attributes.each do |attribute| %>
	    <tr>
	  	  <td><%= attribute.name %></td>
		  <td>
	      <% if current_user.try(:admin?) %>
	   		<%= link_to('Edit', edit_item_attribute_path(attribute), :class => "action-edit") %>
		  <% elsif current_user.try(:superadmin?) %>
		    <%= link_to('Edit', edit_item_attribute_path(attribute), :class => "action-edit") %> | <%= link_to('Delete', item_attribute_path(attribute), :confirm => "Are you sure?", :method => :delete) %>
	  	  <% end %>
		  </td>
	    </tr>
	    <% end %>
	</tbody>
	</table>
	<br />
	<%= render :partial => '/shared/tablesorter_pager', :locals => {:pager_id => "attributes-table" } %>
	<br />
	<br />
  <% if current_user.try(:admin?) || current_user.try(:superadmin?) %>
    <%= link_to("Add New Technology", new_item_attribute_path, :class => "btn btn-default" ) %>
  <% end %>
</div>
