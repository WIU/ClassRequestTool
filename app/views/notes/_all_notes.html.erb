<h4>Notes</h4>
<% unless notes.nil? || notes.empty? %>
  Current Notes:<br />
  <% notes.each do |note| %>
    <p>
	  <%= note.note_text %> recorded by: <%= note.user.username %> - <%= note.user.user_type %> on: <%= note.created_at.strftime('%m/%d/%Y %I:%M %P') %>
	  <br />
      <%= link_to "Edit", edit_note_path(note.id) %> | <%= link_to('Delete', note_path(note), :confirm => "Are you sure?", :method => :delete) %>
    </p>
  <% end %>
<% end %>