<h2>Site Localization</h3>
<h3>Custom Fields</h3>
<%= semantic_form_for([:admin, custom], :input_html => { :multipart => true } ) do |f| %>
  <%= f.inputs do %>
    <%= f.input :institution, :label => 'Institution Short Name (e.g. Harvard)' %><br />
    <%= f.input :institution_long, :label => 'Institution Long Name (e.g. Harvard University)' %><br />
    <%= f.input :tool_name, :label => 'Local Name for this Tool' %><br />
    <%= f.input :slogan, :label => 'Slogan for this Tool' %><br />
    <%= f.inputs "Banner Image", :for => [:attached_image_attributes, f.object.attached_image || AttachedImage.new] do |banner| %>
      <%= image_tag(banner.object.image_url(:banner_thumb)) unless (banner.object.id.nil? || banner.object.image.nil?) %>
      <%= banner.input :id, :as => :hidden %>
      <%= banner.input :picture_id, :as => :hidden %>
      <%= banner.input :picture_type, :as => :hidden %>
      <%= banner.input :image_cache, :as => :hidden %>
      <%= banner.input :image, :as => :file, :label => 'Banner Image' %>
    <% end %>
    <fieldset>
      <legend>Notifications</legend>
      <%= f.input :notifications_on, :label => 'Notifications ON' %><br />
    </fieldset>
    <fieldset>
      <legend>Content Admin</legend>
      <%= f.input :tool_content_admin_name, :label => 'Name' %><br />
      <%= f.input :tool_content_admin_email, :label => 'Email' %><br />
    </fieldset>
    <fieldset>
      <legend>Tech Admin</legend>
      <%= f.input :tool_tech_admin_name, :label => 'Name' %><br />
      <%= f.input :tool_tech_admin_email, :label => 'Email' %><br />
    </fieldset>
    <%= f.input :default_email_sender, :label => 'Default Sender for Tool Emails' %><br />
  <% end %>
  <br />
  <%= f.actions do %>
    <%= f.action :submit, :as => :button, :label => 'Update Localization', :button_html => {:class => 'btn btn-primary'} %>
  <% end %>
<% end %>

<h3>Affiliates</h3>
<table class="table affiliates">
  <thead>
    <th>Name</th>
    <th>Actions</th>
  </thead>
  <tbody>
  <% affiliates.each do |aff| %>
    <tr id='affiliate-<%= aff.id %>' class='existing-affiliate'>
      <td><%= text_field_tag :name, nil, :value => aff.name, :class => 'form-control' %></td>
      <td><%= link_to 'Update', '#', :id => "update-affiliate-#{aff.id}", :class => 'btn btn-xs bnt-default' %> | <%= link_to 'Delete', '#', :id => "delete-affiliate-#{aff.id}", :class => 'btn btn-xs btn-danger'  %>
    </tr>
  <% end %>
  <tr class='new-affiliate'>
    <td><%= text_field_tag :name, nil, :placeholder => 'Add new affiliate', :class => 'form-control' %></td>
    <td><%= link_to 'Save', '#', :id => 'save-affiliate', :class => 'btn btn-xs bnt-default'  %></td>
  </tr>
</table>
  


